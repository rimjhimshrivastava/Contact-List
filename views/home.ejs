<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/133845b97a.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/home.css">
    <title>
        <%= title %>
    </title>
</head>
<body>
    <h1 class="page_heading"><i class="fa-solid fa-address-book"></i> My Contact List</h1>
    <div>
        <ul>
            <% for (let i of contact_list) { %>
                <li>
                    <p><%= i.name %></p>
                    <p><%= i.phone %></p>
                    <div class="delete">
                        <!--using params 
                        <a href="/delete-contact/<%=i.phone%>">
                            <i class="fa-solid fa-trash"></i>
                        </a> -->
                        <!-- using query -->
                        <!-- <a href="/delete-contact/?phone=<%=i.phone%>&name=<%=i.name%>"> -->
                        <a href="/delete-contact/?id=<%= i._id %>">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </div>
                </li>
            <% } %>
            
        </ul>
    </div>
    <form action="/create-contact" method="POST">
        <input type = "text" name="name" placeholder="Enter Name" required>
        <input type = "number" name="phone" placeholder="Enter Phone number" required>
        <button type="submit">Add Contact</button>
    </form>
</body>
</html>